/**index.wxss**/
.login_container { 

}
.login_content {
  width: 90%;
  position: absolute;
  top: 500rpx;
  left: 10%;
}

.weui-label {
  width: 120rpx;
  border-right: 1px solid silver;
}

.login {
  padding: 4px 14px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 35px;
  /* border-bottom: 1px solid silver; */
  border-radius: 4px;
  width: 80%;
  margin-bottom: 10px;
  border: 1px solid silver;
}

.login > view:nth-child(2) {
  margin-left: 5px;
}

.login-password {
  display: flex;
  align-items: center;
  justify-content: space-bettwen;
}
.login-password > image {
  width: 50rpx;
  height: 50rpx;
  flex-shrink: 0; 
}

.index_btn {
  display: flex;
  flex-direction: column;
  margin-top: 5px;
}

#wx_login_btn {
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

#wx_login_btn > image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

button {
  width: 90%;
  margin-left: 0;
}

#registe_account_view {
  width: 90%;
  margin-top: 20rpx;
  font-size: 14px;
  text-align: center;
}